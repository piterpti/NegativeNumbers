<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="#AABBCC"
    >

    <LinearLayout
        android:id="@+id/diffLevelAdapterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/diffLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LATWY"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/diffLevelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diffAdapter_anwerTime"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/diffLevelCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diffAdapter_questionCount"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>